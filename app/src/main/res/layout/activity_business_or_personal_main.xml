<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BusinessOrPersonalMainActivity" >

    <TextView
        android:id="@+id/presentTitle"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:gravity="center"
        android:text="Track-o-holic: Your Daily Inventory Management App"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Button
        android:id="@+id/BusinessButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Button" />

    <Button
        android:id="@+id/PersonalButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Button" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="296dp"
        android:padding="10dp"
        app:srcCompat="@drawable/trackoholic" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:gravity="center"
        android:text="Developed By Team Storm Eagles" />

</LinearLayout>